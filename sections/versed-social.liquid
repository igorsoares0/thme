                  </svg>
                  <span>Instagram</span>
                  {% if section.settings.instagram_followers %}
                    <span class="follower-count">{{ section.settings.instagram_followers }}</span>
                  {% endif %}
                </a>
              {% endif %}
              
              {% if section.settings.tiktok_url %}
