      <p class="section-subtitle">{{ section.settings.subtitle | default: "Join our community and see how real customers are using our products" }}</p>
      
      {% if section.settings.hashtag %}
        <div class="hashtag-display">
          <span class="hashtag">#{{ section.settings.hashtag }}</span>
          <span class="hashtag-instruction">{{ section.settings.hashtag_instruction | default: "Tag us to be featured!" }}</span>
        </div>
      {% endif %}
    </div>
    
    <div class="social-content">
      <div class="social-feeds">
        <div class="instagram-feed">
          <div class="feed-header">
            <h3>
