<section class="versed-hero" {% if section.settings.background_color %}style="background-color: {{ section.settings.background_color }}"{% endif %}>
  <div class="hero__container">
    <div class="hero__content">
      {% if section.settings.subtitle %}
        <p class="hero__eyebrow">{{ section.settings.eyebrow_text | default: "New Collection" }}</p>
      {% endif %}
      
      <h1 class="hero__title">
        {% assign title_parts = section.settings.title | default: "For Skin You Feel Good In" | split: ' ' %}
        {% for word in title_parts %}
          {% if forloop.last and title_parts.size > 3 %}
            <span class="hero__title-accent">{{ word }}</span>
          {% else %}
            {{ word }}
          {% endif %}
          {% unless forloop.last %} {% endunless %}
        {% endfor %}
      </h1>
      
      <p class="hero__subtitle">{{ section.settings.subtitle | default: "Clean, effective skincare that celebrates your natural beauty" }}</p>
      
      <div class="hero__actions">
        {% if section.settings.cta_url and section.settings.cta_text %}
          <a href="{{ section.settings.cta_url }}" class="btn {% if section.settings.cta_style == 'accent' %}btn--accent{% else %}btn--primary{% endif %} hero__cta">
            {{ section.settings.cta_text | default: "Shop Now" }}
          </a>
        {% endif %}
        
        {% if section.settings.secondary_cta_url and section.settings.secondary_cta_text %}
          <a href="{{ section.settings.secondary_cta_url }}" class="btn {% if section.settings.secondary_cta_style == 'accent' %}btn--accent{% else %}btn--secondary{% endif %} hero__cta">
            {{ section.settings.secondary_cta_text | default: "Learn More" }}
          </a>
        {% endif %}
      </div>

      {% if section.settings.features_text %}
        <div class="hero__features">
          {% assign features = section.settings.features_text | split: '|' %}
          {% for feature in features limit: 3 %}
            <div class="hero__feature">
              <svg class="hero__feature-icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
                <path d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z" fill="currentColor"/>
              </svg>
              <span>{{ feature | strip }}</span>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
    
    {% if section.settings.hero_image %}
      <div class="hero__media">
        <div class="hero__image-container">
          {% render 'image', 
            image: section.settings.hero_image, 
            width: 600,
            height: 600,
            class: "hero__image"
          %}
          
          {% if section.settings.floating_badge_text %}
            <div class="hero__badge">
              {{ section.settings.floating_badge_text }}
            </div>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>

  {% if section.settings.show_scroll_indicator %}
    <div class="hero__scroll-indicator">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
        <path d="M7 13l3 3 3-3m-3-8v11" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
  {% endif %}
</section>

{% stylesheet %}
.versed-hero {
  position: relative;
  min-height: 90vh;
  display: flex;
  align-items: center;
  background-color: var(--color-background);
  overflow: hidden;
}

.hero__container {
  display: grid;
  grid-template-columns: 1.2fr 1fr;
  gap: var(--spacing-3xl);
  align-items: center;
  width: 100%;
  max-width: var(--page-max-width);
  margin: 0 auto;
  padding: var(--spacing-3xl) var(--page-margin);
}

.hero__content {
  max-width: 540px;
}

.hero__eyebrow {
  font-family: var(--font-accent--family);
  font-size: var(--font-size-sm);
  font-weight: 500;
  color: var(--color-primary);
  text-transform: uppercase;
  letter-spacing: 0.1em;
  margin-bottom: var(--spacing-md);
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 0.8s ease-out 0.2s forwards;
}

.hero__title {
  font-size: clamp(2.5rem, 5vw, 4rem);
  font-weight: 300;
  line-height: 1.1;
  letter-spacing: -0.03em;
  color: var(--color-foreground);
  margin-bottom: var(--spacing-lg);
  opacity: 0;
  transform: translateY(30px);
  animation: fadeInUp 0.8s ease-out 0.4s forwards;
}

.hero__title-accent {
  color: var(--color-primary);
  font-style: italic;
}

.hero__subtitle {
  font-size: var(--font-size-lg);
  line-height: 1.6;
  color: var(--color-text-muted);
  margin-bottom: var(--spacing-2xl);
  max-width: 480px;
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 0.8s ease-out 0.6s forwards;
}

.hero__actions {
  display: flex;
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-xl);
  flex-wrap: wrap;
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 0.8s ease-out 0.8s forwards;
}

.hero__cta {
  padding: var(--spacing-md) var(--spacing-xl);
  font-size: var(--font-size-base);
}

.hero__features {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 0.8s ease-out 1s forwards;
}

.hero__feature {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  font-size: var(--font-size-sm);
  color: var(--color-text-muted);
}

.hero__feature-icon {
  color: var(--color-primary);
  flex-shrink: 0;
}

.hero__media {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transform: translateX(40px);
  animation: fadeInRight 1s ease-out 0.6s forwards;
}

.hero__image-container {
  position: relative;
  border-radius: var(--radius-xl);
  overflow: hidden;
  box-shadow: var(--shadow-lg);
  background-color: var(--color-secondary);
}

.hero__image {
  width: 100%;
  height: auto;
  display: block;
  transition: transform var(--transition-slow);
}

.hero__image:hover {
  transform: scale(1.05);
}

.hero__badge {
  position: absolute;
  top: var(--spacing-lg);
  right: var(--spacing-lg);
  background-color: var(--color-deep-black);
  color: var(--color-pure-white);
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-full);
  font-size: var(--font-size-xs);
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  transform: rotate(12deg);
}

.hero__scroll-indicator {
  position: absolute;
  bottom: var(--spacing-xl);
  left: 50%;
  transform: translateX(-50%);
  color: var(--color-text-muted);
  animation: bounce 2s infinite;
  cursor: pointer;
}

/* Animations */
@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInRight {
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateX(-50%) translateY(0);
  }
  40% {
    transform: translateX(-50%) translateY(-10px);
  }
  60% {
    transform: translateX(-50%) translateY(-5px);
  }
}

/* Responsive Design */
@media (max-width: 1024px) {
  .hero__container {
    gap: var(--spacing-2xl);
    padding: var(--spacing-2xl) var(--page-margin);
  }
  
  .hero__title {
    font-size: clamp(2rem, 4vw, 3rem);
  }
}

@media (max-width: 768px) {
  .versed-hero {
    min-height: 80vh;
  }
  
  .hero__container {
    grid-template-columns: 1fr;
    gap: var(--spacing-xl);
    text-align: center;
    padding: var(--spacing-xl) var(--spacing-lg);
  }
  
  .hero__content {
    order: 2;
    max-width: 100%;
  }
  
  .hero__media {
    order: 1;
  }
  
  .hero__actions {
    justify-content: center;
  }
  
  .hero__cta {
    flex: 1;
    min-width: 160px;
  }
}

@media (max-width: 480px) {
  .hero__container {
    padding: var(--spacing-lg) var(--spacing-md);
  }
  
  .hero__actions {
    flex-direction: column;
  }
  
  .hero__cta {
    width: 100%;
  }
}

/* Reduced motion */
@media (prefers-reduced-motion: reduce) {
  .hero__eyebrow,
  .hero__title,
  .hero__subtitle,
  .hero__actions,
  .hero__features,
  .hero__media {
    animation: none;
    opacity: 1;
    transform: none;
  }
  
  .hero__scroll-indicator {
    animation: none;
  }
}
{% endstylesheet %}

