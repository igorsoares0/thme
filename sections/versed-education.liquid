<section class="versed-education">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">{{ section.settings.title | default: "Skincare Education" }}</h2>
      <p class="section-subtitle">{{ section.settings.subtitle | default: "Learn from the experts and build the perfect routine for your skin" }}</p>
    </div>
    
    <div class="education-content">
      <div class="articles-grid">
        {% for block in section.blocks %}
          {% if block.type == 'article' %}
            <article class="education-article">
              {% if block.settings.image %}
                <div class="article-image">
                  <a href="{{ block.settings.url }}">
                    <img src="{{ block.settings.image | img_url: '400x250' }}" alt="{{ block.settings.title }}">
                  </a>
                </div>
              {% endif %}
              
              <div class="article-content">
                {% if block.settings.category %}
                  <div class="article-category">{{ block.settings.category }}</div>
                {% endif %}
                
                <h3 class="article-title">
                  <a href="{{ block.settings.url }}">{{ block.settings.title }}</a>
                </h3>
                
                <p class="article-excerpt">{{ block.settings.excerpt }}</p>
                
                <div class="article-meta">
                  {% if block.settings.read_time %}
                    <span class="read-time">{{ block.settings.read_time }} min read</span>
                  {% endif %}
                  
                  {% if block.settings.author %}
                    <span class="article-author">By {{ block.settings.author }}</span>
                  {% endif %}
                </div>
                
                <a href="{{ block.settings.url }}" class="read-more">
                  Read More â†’
                </a>
              </div>
            </article>
          {% endif %}
        {% endfor %}
      </div>
      
      <div class="education-sidebar">
        <div class="quick-tips">
          <h3>Quick Tips</h3>
          <div class="tips-list">
            {% for block in section.blocks %}
              {% if block.type == 'tip' %}
                <div class="tip-item">
                  {% if block.settings.icon %}
                    <div class="tip-icon">
                      <img src="{{ block.settings.icon | img_url: '30x30' }}" alt="{{ block.settings.title }}">
                    </div>
                  {% endif %}
                  <div class="tip-content">
                    <h4 class="tip-title">{{ block.settings.title }}</h4>
                    <p class="tip-description">{{ block.settings.description }}</p>
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
        
        {% if section.settings.show_routine_builder %}
          <div class="routine-builder-cta">
            <h3>{{ section.settings.routine_title | default: "Build Your Routine" }}</h3>
            <p>{{ section.settings.routine_description | default: "Take our quiz to get personalized product recommendations" }}</p>
            <a href="{{ section.settings.routine_url }}" class="btn btn-primary">
              {{ section.settings.routine_cta | default: "Start Quiz" }}
            </a>
          </div>
        {% endif %}
        
        {% if section.settings.show_newsletter %}
          <div class="newsletter-signup">
            <h3>{{ section.settings.newsletter_title | default: "Skincare Tips" }}</h3>
            <p>{{ section.settings.newsletter_description | default: "Get weekly skincare tips delivered to your inbox" }}</p>
            <form class="newsletter-form" action="#" method="post">
              <input type="email" placeholder="Your email address" required>
              <button type="submit" class="btn btn-secondary">Subscribe</button>
            </form>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
.versed-education {
  padding: 5rem 0;
  background: #FFFFFF;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
}

.section-header {
  text-align: center;
  margin-bottom: 4rem;
}

.section-title {
  font-size: 2.5rem;
  font-weight: 300;
  color: #000000;
  margin-bottom: 1rem;
  letter-spacing: -0.02em;
}

.section-subtitle {
  font-size: 1.1rem;
  color: #666;
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.5;
}

.education-content {
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 4rem;
}

.articles-grid {
  display: grid;
  gap: 2rem;
}

.education-article {
  background: #F9F9F9;
  border-radius: 12px;
  overflow: hidden;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.education-article:hover {
  transform: translateY(-3px);
  box-shadow: 0 10px 25px rgba(0,0,0,0.1);
}

.article-image {
  aspect-ratio: 16/10;
  overflow: hidden;
}

.article-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.education-article:hover .article-image img {
  transform: scale(1.05);
}

.article-content {
  padding: 2rem;
}

.article-category {
  display: inline-block;
  background: #000000;
  color: #FFFFFF;
  padding: 0.3rem 0.8rem;
  border-radius: 15px;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: 1rem;
}

.article-title {
  margin-bottom: 1rem;
}

.article-title a {
  color: #000000;
  text-decoration: none;
  font-size: 1.3rem;
  font-weight: 600;
  line-height: 1.3;
}

.article-title a:hover {
  color: #666;
}

.article-excerpt {
  color: #666;
  line-height: 1.5;
  margin-bottom: 1.5rem;
}

.article-meta {
  display: flex;
  gap: 1rem;
  margin-bottom: 1.5rem;
  font-size: 0.85rem;
  color: #888;
}

.read-more {
  color: #000000;
  text-decoration: none;
  font-weight: 500;
  font-size: 0.9rem;
  transition: color 0.3s ease;
}

.read-more:hover {
  color: #666;
}

.education-sidebar {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.quick-tips,
.routine-builder-cta,
.newsletter-signup {
  background: #F5F5F5;
  padding: 2rem;
  border-radius: 12px;
}

.quick-tips h3,
.routine-builder-cta h3,
.newsletter-signup h3 {
  font-size: 1.4rem;
  font-weight: 600;
  color: #000000;
  margin-bottom: 1.5rem;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
}

.tip-icon {
  flex-shrink: 0;
  width: 30px;
  height: 30px;
}

.tip-icon img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.tip-title {
  font-size: 1rem;
  font-weight: 600;
  color: #000000;
  margin-bottom: 0.5rem;
}

.tip-description {
  font-size: 0.9rem;
  color: #666;
  line-height: 1.4;
}

.routine-builder-cta p,
.newsletter-signup p {
  color: #666;
  margin-bottom: 1.5rem;
  line-height: 1.5;
}

.btn {
  display: inline-block;
  padding: 0.75rem 1.5rem;
  text-decoration: none;
  font-weight: 500;
  border-radius: 4px;
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
  text-align: center;
}

.btn-primary {
  background: #000000;
  color: #FFFFFF;
}

.btn-primary:hover {
  background: #333;
}

.btn-secondary {
  background: transparent;
  color: #000000;
  border: 2px solid #000000;
}

.btn-secondary:hover {
  background: #000000;
  color: #FFFFFF;
}

.newsletter-form {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.newsletter-form input {
  padding: 0.75rem;
  border: 2px solid #ddd;
  border-radius: 4px;
  font-size: 0.9rem;
}

.newsletter-form input:focus {
  outline: none;
  border-color: #000000;
}

@media (max-width: 768px) {
  .versed-education {
    padding: 3rem 0;
  }
  
  .education-content {
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  
  .section-title {
    font-size: 2rem;
  }
  
  .article-content {
    padding: 1.5rem;
  }
  
  .education-sidebar {
    order: -1;
  }
  
  .quick-tips,
  .routine-builder-cta,
  .newsletter-signup {
    padding: 1.5rem;
  }
}

@media (max-width: 480px) {
  .container {
    padding: 0 1rem;
  }
  
  .tip-item {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
}
{% endstylesheet %}

