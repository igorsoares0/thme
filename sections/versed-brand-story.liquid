<section class="versed-brand-story">
  <div class="container">
    <div class="brand-story-content">
      <div class="story-text">
        <h2 class="section-title">{{ section.settings.title | default: "Our Story" }}</h2>
        <div class="story-description">
          {{ section.settings.description | default: "At Versed, we believe that everyone deserves to feel confident in their skin. Our mission is to create clean, effective skincare that celebrates your natural beauty and supports your skin's health." }}
        </div>
        
        <div class="brand-values">
          {% for block in section.blocks %}
            {% if block.type == 'value' %}
              <div class="value-item">
                <h3 class="value-title">{{ block.settings.title }}</h3>
                <p class="value-description">{{ block.settings.description }}</p>
              </div>
            {% endif %}
          {% endfor %}
        </div>
        
        {% if section.settings.cta_text and section.settings.cta_url %}
          <div class="story-cta">
            <a href="{{ section.settings.cta_url }}" class="btn btn-primary">
              {{ section.settings.cta_text }}
            </a>
          </div>
        {% endif %}
      </div>
      
      <div class="story-visual">
        {% if section.settings.image %}
          <div class="story-image">
            <img src="{{ section.settings.image | img_url: '600x600' }}" alt="{{ section.settings.title }}">
          </div>
        {% endif %}
        
        {% if section.settings.video_url %}
          <div class="story-video">
            <video autoplay muted loop playsinline>
              <source src="{{ section.settings.video_url }}" type="video/mp4">
            </video>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
.versed-brand-story {
  padding: 5rem 0;
  background: #F5F5F5;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
}

.brand-story-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
}

.section-title {
  font-size: 2.5rem;
  font-weight: 300;
  color: #000000;
  margin-bottom: 2rem;
  letter-spacing: -0.02em;
}

.story-description {
  font-size: 1.1rem;
  line-height: 1.6;
  color: #333;
  margin-bottom: 3rem;
}

.brand-values {
  margin-bottom: 3rem;
}

.value-item {
  margin-bottom: 2rem;
  padding-bottom: 2rem;
  border-bottom: 1px solid #E0E0E0;
}

.value-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.value-title {
  font-size: 1.3rem;
  font-weight: 600;
  color: #000000;
  margin-bottom: 0.5rem;
}

.value-description {
  color: #666;
  line-height: 1.5;
}

.story-cta {
  margin-top: 2rem;
}

.btn-primary {
  display: inline-block;
  padding: 1rem 2rem;
  background: #000000;
  color: #FFFFFF;
  text-decoration: none;
  border-radius: 4px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-primary:hover {
  background: #333;
  transform: translateY(-2px);
}

.story-visual {
  position: relative;
}

.story-image,
.story-video {
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 20px 40px rgba(0,0,0,0.1);
}

.story-image img,
.story-video video {
  width: 100%;
  height: auto;
  display: block;
}

.story-video video {
  aspect-ratio: 4/3;
  object-fit: cover;
}

@media (max-width: 768px) {
  .versed-brand-story {
    padding: 3rem 0;
  }
  
  .brand-story-content {
    grid-template-columns: 1fr;
    gap: 2rem;
    text-align: center;
  }
  
  .story-visual {
    order: -1;
  }
  
  .section-title {
    font-size: 2rem;
  }
  
  .story-description {
    font-size: 1rem;
  }
}

@media (max-width: 480px) {
  .container {
    padding: 0 1rem;
  }
  
  .value-item {
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
  }
}
{% endstylesheet %}

{% schema %}
{
  "name": "Versed Brand Story",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Our Story"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Brand Story",
      "default": "<p>At Versed, we believe that everyone deserves to feel confident in their skin. Our mission is to create clean, effective skincare that celebrates your natural beauty and supports your skin's health.</p>"
