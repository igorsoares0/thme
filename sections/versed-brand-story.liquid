    {
      "type": "image_picker",
      "id": "image",
      "label": "Story Image"
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "Video URL (MP4)",
      "info": "Optional: Add a video URL to display instead of image"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Call to Action Text"
    },
    {
      "type": "url",
      "id": "cta_url",
