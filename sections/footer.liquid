                  </svg>
                </a>
              {% endif %}
              
              {% if section.settings.social_tiktok %}
                <a href="{{ section.settings.social_tiktok }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="TikTok">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12.53.02C13.84 0 15.14.01 16.44 0c.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
                  </svg>
                </a>
              {% endif %}
              
              {% if section.settings.social_pinterest %}
                <a href="{{ section.settings.social_pinterest }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Pinterest">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12,2A10,10 0 0,0 2,12C2,16.42 4.87,20.17 8.84,21.5C8.74,20.85 8.66,19.82 8.84,19.11L9.78,14.95C9.78,14.95 9.5,14.39 9.5,13.58C9.5,12.32 10.25,11.39 11.18,11.39C11.95,11.39 12.33,11.96 12.33,12.66C12.33,13.45 11.84,14.62 11.59,15.69C11.39,16.59 12.07,17.32 12.96,17.32C14.58,17.32 15.83,15.63 15.83,13.12C15.83,10.92 14.31,9.39 12.06,9.39C9.46,9.39 7.96,11.37 7.96,13.41C7.96,14.2 8.26,15.04 8.64,15.5C8.7,15.57 8.71,15.64 8.69,15.72L8.43,16.68C8.39,16.84 8.31,16.87 8.15,16.8C7.04,16.3 6.34,14.73 6.34,13.37C6.34,10.5 8.42,7.89 12.31,7.89C15.42,7.89 17.86,10.08 17.86,13.07C17.86,16.22 15.96,18.73 13.17,18.73C12.27,18.73 11.42,18.27 11.13,17.7L10.63,19.68C10.4,20.54 9.83,21.61 9.43,22.26C10.25,22.47 11.11,22.6 12,22.6A10,10 0 0,0 22,12.6C22,6.81 17.18,2 12,2Z"/>
                  </svg>
                </a>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    {% endif %}

    <!-- Main Footer Content -->
    <div class="footer__main">
      <div class="footer__grid">
        
        <!-- Navigation Columns -->
        {% for block in section.blocks %}
          {% if block.type == 'link_list' %}
            <div class="footer__nav-column" {{ block.shopify_attributes }}>
              {% if block.settings.heading %}
                <h3 class="footer__nav-title">{{ block.settings.heading }}</h3>
              {% endif %}
              
              {% if block.settings.menu %}
                <ul class="footer__nav-list">
                  {% for link in linklists[block.settings.menu].links %}
                    <li class="footer__nav-item">
                      <a href="{{ link.url }}" class="footer__nav-link">{{ link.title }}</a>
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
        
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer__bottom">
      <div class="footer__bottom-content">
        <div class="footer__copyright">
          <p>&copy; {{ section.settings.company_name | default: "OFFSPRING BEAUTY CO." }} {{ 'now' | date: '%Y' }}</p>
        </div>
      </div>
    </div>
    
  </div>
</footer>

{% stylesheet %}
.footer {
  background-color: #f5f5f5;
  margin-top: auto;
  padding: 60px 0 30px 0;
}

.footer__container {
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

/* Newsletter Section */
.footer__newsletter {
  text-align: left;
  margin-bottom: 60px;
}

.footer__newsletter-content {
  max-width: none;
  margin: 0;
}

.footer__newsletter-title {
  font-size: 48px;
  font-weight: 400;
  color: #000;
  margin-bottom: 12px;
  line-height: 1.1;
}

.footer__newsletter-text {
  color: #666;
  font-size: 16px;
  line-height: 1.4;
  margin-bottom: 30px;
}

.footer__newsletter-form {
  max-width: 500px;
  margin: 0 0 24px 0;
}

.footer__newsletter-input-wrapper {
  display: flex;
  border-bottom: 2px solid #000;
  padding: 0;
  background: transparent;
  border-radius: 0;
  box-shadow: none;
  align-items: center;
}

.footer__newsletter-input {
  flex: 1;
  border: none;
  background: transparent;
  padding: 12px 0;
  font-size: 16px;
  color: #000;
  outline: none;
}

.footer__newsletter-input::placeholder {
  color: #999;
}

.footer__newsletter-submit {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  background: transparent;
  color: #000;
  border: none;
  cursor: pointer;
  font-family: var(--font-accent--family);
  font-size: 14px;
  font-weight: 500;
  letter-spacing: 0.05em;
  text-transform: uppercase;
  width: auto;
  height: auto;
  border-radius: 0;
}

.footer__newsletter-submit:hover {
  opacity: 0.7;
  transform: none;
}

/* Social Icons */
.footer__social {
  display: flex;
  gap: 16px;
  margin-top: 0;
}

.footer__social-link {
  display: flex;
  align-items: center;
  justify-content: center;
  width: auto;
  height: auto;
  background: transparent;
  color: #000;
  border-radius: 0;
  text-decoration: none;
  transition: opacity 0.2s ease;
  box-shadow: none;
  padding: 0;
}

.footer__social-link:hover {
  opacity: 0.7;
  background: transparent;
  color: #000;
  transform: none;
}

/* Main Footer */
.footer__main {
  margin-bottom: 40px;
}

.footer__grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: 40px;
  align-items: start;
  max-width: 800px;
}

/* Navigation Columns */
.footer__nav-column {
  min-width: auto;
}

.footer__nav-title {
  font-size: 16px;
  font-weight: 600;
  color: #000;
  margin-bottom: 20px;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.footer__nav-list {
  list-style: none;
  margin: 0;
  padding: 0;
}

.footer__nav-item {
  margin-bottom: 12px;
}

.footer__nav-link {
  color: #666;
  text-decoration: none;
  font-size: 14px;
  transition: color 0.2s ease;
  line-height: 1.5;
}

.footer__nav-link:hover {
  color: #000;
}

/* Footer Bottom */
.footer__bottom {
  border-top: none;
  padding-top: 0;
  padding-bottom: 30px;
}

.footer__bottom-content {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  gap: 0;
}

.footer__copyright {
  color: #999;
  font-size: 12px;
}

.footer__copyright p {
  margin: 0;
  line-height: 1.4;
}

/* Responsive Design */
@media (max-width: 768px) {
  .footer {
    padding: 40px 0 20px 0;
  }

  .footer__newsletter {
    margin-bottom: 40px;
  }

  .footer__newsletter-title {
    font-size: 36px;
  }

  .footer__grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }

  .footer__social {
    justify-content: flex-start;
    margin-top: 20px;
  }
}

@media (max-width: 480px) {
  .footer__newsletter-title {
    font-size: 28px;
  }

  .footer__grid {
    grid-template-columns: 1fr;
    gap: 25px;
  }

  .footer__newsletter-input-wrapper {
    margin-bottom: 20px;
  }
}
{% endstylesheet %}

