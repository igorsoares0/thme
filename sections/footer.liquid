<footer class="footer" role="contentinfo">
  <div class="footer__container">
    
    <!-- Newsletter Section -->
    {% if section.settings.show_newsletter %}
      <div class="footer__newsletter">
        <div class="footer__newsletter-content">
          <h3 class="footer__newsletter-title">{{ section.settings.newsletter_title | default: "Stay In The Know" }}</h3>
          <p class="footer__newsletter-text">{{ section.settings.newsletter_text | default: "Get the latest on skincare tips, new product launches, and exclusive offers." }}</p>
          
          <form action="{{ routes.root_url }}contact#contact_form" method="post" id="contact_form" accept-charset="UTF-8" class="footer__newsletter-form">
            <input type="hidden" name="form_type" value="customer">
            <input type="hidden" name="utf8" value="âœ“">
            <input type="hidden" name="contact[tags]" value="newsletter">
            
            <div class="footer__newsletter-input-wrapper">
              <input
                type="email"
                name="contact[email]"
                id="ContactEmail"
                class="footer__newsletter-input"
                placeholder="{{ section.settings.newsletter_placeholder | default: 'Enter your email address' }}"
                required
                aria-label="Email address for newsletter"
              >
              <button type="submit" class="footer__newsletter-submit" aria-label="Subscribe to newsletter">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <path d="M18 2L9 11l-4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </button>
            </div>
          </form>
        </div>
      </div>
    {% endif %}

    <!-- Main Footer Content -->
    <div class="footer__main">
      <div class="footer__grid">
        
        <!-- Brand Column -->
        <div class="footer__brand">
          <div class="footer__logo">
            {% if section.settings.logo %}
              <img src="{{ section.settings.logo | img_url: '200x' }}" alt="{{ shop.name }}" class="footer__logo-image">
            {% else %}
              <h2 class="footer__logo-text">{{ shop.name }}</h2>
            {% endif %}
          </div>
          
          {% if section.settings.description %}
            <p class="footer__description">{{ section.settings.description }}</p>
          {% endif %}
          
          <!-- Social Links -->
          {% if section.settings.show_social %}
            <div class="footer__social">
              {% if section.settings.social_instagram %}
                <a href="{{ section.settings.social_instagram }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Instagram">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <rect x="2" y="2" width="20" height="20" rx="5" ry="5" stroke="currentColor" stroke-width="2"/>
                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" stroke="currentColor" stroke-width="2"/>
                    <line x1="17.5" y1="6.5" x2="17.51" y2="6.5" stroke="currentColor" stroke-width="2"/>
                  </svg>
                </a>
              {% endif %}
              
              {% if section.settings.social_tiktok %}
                <a href="{{ section.settings.social_tiktok }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="TikTok">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <path d="M12.53.02C13.84 0 15.14.01 16.44 0c.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z" fill="currentColor"/>
                  </svg>
                </a>
              {% endif %}
              
              {% if section.settings.social_facebook %}
                <a href="{{ section.settings.social_facebook }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Facebook">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z" stroke="currentColor" stroke-width="2" fill="none"/>
                  </svg>
                </a>
              {% endif %}
              
              {% if section.settings.social_twitter %}
                <a href="{{ section.settings.social_twitter }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Twitter">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z" stroke="currentColor" stroke-width="2" fill="none"/>
                  </svg>
                </a>
              {% endif %}
            </div>
          {% endif %}
        </div>

        <!-- Navigation Columns -->
        {% for block in section.blocks %}
          {% if block.type == 'link_list' %}
            <div class="footer__nav-column" {{ block.shopify_attributes }}>
              {% if block.settings.heading %}
                <h3 class="footer__nav-title">{{ block.settings.heading }}</h3>
              {% endif %}
              
              {% if block.settings.menu %}
                <ul class="footer__nav-list">
                  {% for link in linklists[block.settings.menu].links %}
                    <li class="footer__nav-item">
                      <a href="{{ link.url }}" class="footer__nav-link">{{ link.title }}</a>
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}

        <!-- Contact Info -->
        {% if section.settings.show_contact %}
          <div class="footer__contact">
            <h3 class="footer__contact-title">{{ section.settings.contact_title | default: "Get In Touch" }}</h3>
            
            {% if section.settings.contact_email %}
              <a href="mailto:{{ section.settings.contact_email }}" class="footer__contact-link">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                  <path d="M2.67 4.67h10.67c.73 0 1.33.6 1.33 1.33v6.67c0 .73-.6 1.33-1.33 1.33H2.67c-.73 0-1.33-.6-1.33-1.33V6c0-.73.6-1.33 1.33-1.33z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M14.67 6L8 10.67 1.33 6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                {{ section.settings.contact_email }}
              </a>
            {% endif %}
            
            {% if section.settings.contact_phone %}
              <a href="tel:{{ section.settings.contact_phone }}" class="footer__contact-link">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                  <path d="M14.67 11.28v2a1.33 1.33 0 0 1-1.45 1.33A13.18 13.18 0 0 1 7.6 13.2a13 13 0 0 1-4.53-4.53A13.18 13.18 0 0 1 1.67 3a1.33 1.33 0 0 1 1.32-1.33h2a1.33 1.33 0 0 1 1.33 1.15c.08.64.23 1.26.44 1.85a1.33 1.33 0 0 1-.3 1.41l-.85.85a10.67 10.67 0 0 0 4.53 4.53l.85-.85a1.33 1.33 0 0 1 1.41-.3c.59.21 1.21.36 1.85.44a1.33 1.33 0 0 1 1.15 1.35z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                {{ section.settings.contact_phone }}
              </a>
            {% endif %}
            
            {% if section.settings.contact_hours %}
              <div class="footer__contact-hours">
                <strong>Hours:</strong> {{ section.settings.contact_hours }}
              </div>
            {% endif %}
          </div>
        {% endif %}
        
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer__bottom">
      <div class="footer__bottom-content">
        <div class="footer__copyright">
          <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
          {% if section.settings.show_powered_by %}
            <p>{{ powered_by_link }}</p>
          {% endif %}
        </div>
        
        {% if section.settings.show_payment_icons %}
          <div class="footer__payment">
            <span class="footer__payment-text">We accept</span>
            <div class="footer__payment-icons">
              {% for type in shop.enabled_payment_types %}
                {{ type | payment_type_svg_tag: class: 'footer__payment-icon' }}
              {% endfor %}
            </div>
          </div>
        {% endif %}
      </div>
    </div>
    
  </div>
</footer>

{% stylesheet %}
.footer {
  background-color: var(--color-secondary);
  margin-top: auto;
  padding-top: var(--spacing-3xl);
}

.footer__container {
  width: 100%;
  max-width: var(--page-max-width);
  margin: 0 auto;
  padding: 0 var(--page-margin);
}

/* Newsletter Section */
.footer__newsletter {
  background-color: var(--color-primary);
  border-radius: var(--radius-xl);
  padding: var(--spacing-3xl);
  margin-bottom: var(--spacing-3xl);
  text-align: center;
}

.footer__newsletter-content {
  max-width: 600px;
  margin: 0 auto;
}

.footer__newsletter-title {
  font-size: var(--font-size-2xl);
  font-weight: 500;
  color: var(--color-pure-white);
  margin-bottom: var(--spacing-sm);
}

.footer__newsletter-text {
  color: rgba(255, 255, 255, 0.9);
  font-size: var(--font-size-base);
  line-height: 1.6;
  margin-bottom: var(--spacing-xl);
}

.footer__newsletter-form {
  max-width: 400px;
  margin: 0 auto;
}

.footer__newsletter-input-wrapper {
  display: flex;
  background-color: var(--color-pure-white);
  border-radius: var(--radius-full);
  padding: var(--spacing-xs);
  box-shadow: var(--shadow-sm);
}

.footer__newsletter-input {
  flex: 1;
  border: none;
  background: transparent;
  padding: var(--spacing-md) var(--spacing-lg);
  font-size: var(--font-size-base);
  color: var(--color-foreground);
}

.footer__newsletter-input:focus {
  outline: none;
}

.footer__newsletter-input::placeholder {
  color: var(--color-text-muted);
}

.footer__newsletter-submit {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48px;
  height: 48px;
  background-color: var(--color-deep-black);
  color: var(--color-pure-white);
  border: none;
  border-radius: var(--radius-full);
  cursor: pointer;
  transition: all var(--transition-base);
}

.footer__newsletter-submit:hover {
  background-color: var(--color-warm-brown);
  transform: scale(1.05);
}

/* Main Footer */
.footer__main {
  margin-bottom: var(--spacing-2xl);
}

.footer__grid {
  display: grid;
  grid-template-columns: 1.5fr repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--spacing-3xl);
  align-items: start;
}

/* Brand Column */
.footer__brand {
  max-width: 300px;
}

.footer__logo {
  margin-bottom: var(--spacing-lg);
}

.footer__logo-image {
  height: 40px;
  width: auto;
}

.footer__logo-text {
  font-size: var(--font-size-xl);
  font-weight: 600;
  color: var(--color-foreground);
  margin: 0;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.footer__description {
  color: var(--color-text-muted);
  line-height: 1.6;
  margin-bottom: var(--spacing-xl);
}

.footer__social {
  display: flex;
  gap: var(--spacing-sm);
}

.footer__social-link {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  background-color: var(--color-background);
  color: var(--color-text-muted);
  border-radius: var(--radius-full);
  text-decoration: none;
  transition: all var(--transition-base);
  box-shadow: var(--shadow-sm);
}

.footer__social-link:hover {
  background-color: var(--color-deep-black);
  color: var(--color-pure-white);
  transform: translateY(-2px);
}

/* Navigation Columns */
.footer__nav-column {
  min-width: 160px;
}

.footer__nav-title {
  font-size: var(--font-size-base);
  font-weight: 600;
  color: var(--color-foreground);
  margin-bottom: var(--spacing-md);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.footer__nav-list {
  list-style: none;
  margin: 0;
  padding: 0;
}

.footer__nav-item {
  margin-bottom: var(--spacing-xs);
}

.footer__nav-link {
  color: var(--color-text-muted);
  text-decoration: none;
  font-size: var(--font-size-sm);
  transition: color var(--transition-base);
  line-height: 1.5;
}

.footer__nav-link:hover {
  color: var(--color-primary);
}

/* Contact Column */
.footer__contact {
  min-width: 200px;
}

.footer__contact-title {
  font-size: var(--font-size-base);
  font-weight: 600;
  color: var(--color-foreground);
  margin-bottom: var(--spacing-md);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.footer__contact-link {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  color: var(--color-text-muted);
  text-decoration: none;
  font-size: var(--font-size-sm);
  margin-bottom: var(--spacing-sm);
  transition: color var(--transition-base);
}

.footer__contact-link:hover {
  color: var(--color-primary);
}

.footer__contact-hours {
  color: var(--color-text-muted);
  font-size: var(--font-size-sm);
  line-height: 1.5;
}

/* Footer Bottom */
.footer__bottom {
  border-top: 1px solid var(--color-border);
  padding-top: var(--spacing-lg);
  padding-bottom: var(--spacing-lg);
}

.footer__bottom-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: var(--spacing-lg);
}

.footer__copyright {
  color: var(--color-text-muted);
  font-size: var(--font-size-sm);
}

.footer__copyright p {
  margin: 0;
  line-height: 1.4;
}

.footer__copyright a {
  color: inherit;
  text-decoration: none;
}

.footer__copyright a:hover {
  color: var(--color-primary);
}

.footer__payment {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.footer__payment-text {
  color: var(--color-text-muted);
  font-size: var(--font-size-sm);
  font-weight: 500;
}

.footer__payment-icons {
  display: flex;
  gap: var(--spacing-xs);
}

.footer__payment-icon {
  height: 24px;
  width: auto;
  opacity: 0.8;
  transition: opacity var(--transition-base);
}

.footer__payment-icon:hover {
  opacity: 1;
}

/* Responsive Design */
@media (max-width: 1024px) {
  .footer__grid {
    grid-template-columns: 1fr;
    gap: var(--spacing-2xl);
    text-align: center;
  }

  .footer__brand {
    max-width: none;
  }

  .footer__nav-column {
    min-width: auto;
  }

  .footer__contact {
    min-width: auto;
  }
}

@media (max-width: 768px) {
  .footer {
    padding-top: var(--spacing-2xl);
  }

  .footer__newsletter {
    padding: var(--spacing-2xl);
    margin-bottom: var(--spacing-2xl);
  }

  .footer__newsletter-title {
    font-size: var(--font-size-xl);
  }

  .footer__grid {
    gap: var(--spacing-xl);
  }

  .footer__social {
    justify-content: center;
  }

  .footer__bottom-content {
    flex-direction: column;
    text-align: center;
    gap: var(--spacing-md);
  }
}

@media (max-width: 480px) {
  .footer__newsletter {
    padding: var(--spacing-lg);
    margin-bottom: var(--spacing-xl);
  }

  .footer__newsletter-input-wrapper {
    flex-direction: column;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm);
    border-radius: var(--radius-lg);
  }

  .footer__newsletter-input {
    text-align: center;
  }

  .footer__newsletter-submit {
    align-self: center;
  }

  .footer__payment {
    flex-direction: column;
    gap: var(--spacing-sm);
  }
}

/* Animation */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.footer__newsletter,
.footer__brand,
.footer__nav-column,
.footer__contact {
  animation: fadeInUp 0.6s ease-out;
  animation-fill-mode: both;
}

.footer__brand { animation-delay: 0.1s; }
.footer__nav-column:nth-of-type(1) { animation-delay: 0.2s; }
.footer__nav-column:nth-of-type(2) { animation-delay: 0.3s; }
.footer__nav-column:nth-of-type(3) { animation-delay: 0.4s; }
.footer__contact { animation-delay: 0.5s; }

@media (prefers-reduced-motion: reduce) {
  .footer__newsletter,
  .footer__brand,
  .footer__nav-column,
  .footer__contact {
    animation: none;
  }

  .footer__social-link:hover,
  .footer__newsletter-submit:hover {
    transform: none;
  }
}
{% endstylesheet %}

